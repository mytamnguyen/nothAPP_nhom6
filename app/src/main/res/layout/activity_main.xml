<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.nothapp.appfuniture.appfuniture.activity.MainActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <ScrollView
          android:layout_width="match_parent"
          android:layout_above="@+id/lineaBottom"
          android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/viewPager"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </androidx.viewpager.widget.ViewPager>
               <me.relex.circleindicator.CircleIndicator
                   android:layout_width="wrap_content"
                   android:layout_height="25dp"
                   android:layout_marginBottom="5dp"
                   app:ci_drawable="@drawable/bg_indicator"
                   android:layout_centerHorizontal="true"
                   android:layout_alignParentBottom="true"
                   android:id="@+id/circleIndicator">
               </me.relex.circleindicator.CircleIndicator>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="25dp"
                   android:background="@drawable/custom_editext"
                   android:drawableLeft="@drawable/ic_baseline_search_24"
                   android:drawablePadding="15dp"
                   android:hint="Tìm kiếm"
                   android:id="@+id/edtSearch"
                   android:padding="15dp"
                   android:textColor="@color/black"
                   android:textSize="20dp" />
               <RelativeLayout
                   android:layout_width="60dp"
                   android:layout_height="58dp"
                   android:layout_alignParentEnd="true"
                   android:layout_marginEnd="20dp"
                   android:layout_marginRight="15dp"
                   android:background="@drawable/custom_btn">

                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_centerInParent="true"
                      android:src="@drawable/set" />
               </RelativeLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/recycLerMenu"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Giảm giá"
                   android:textColor="@color/black"
                   android:textSize="23dp"
                   android:textStyle="bold" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Xem tất cả >"
                   android:textSize="20dp"
                   android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/recylerGiamGia"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phổ biến"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerPhoBien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
         </LinearLayout>
      </ScrollView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:id="@+id/lineaBottom"
          android:layout_alignParentBottom="true"
         android:background="#5051A2">
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:src="@drawable/ic_baseline_message_24"
             android:layout_gravity="center_vertical"
             android:layout_weight="1"/>
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:src="@drawable/ic_baseline_shopping_cart_24"
             android:layout_gravity="center_vertical"
             android:layout_weight="1"/>
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:src="@drawable/ic_baseline_notifications_none_24"
             android:layout_gravity="center_vertical"
             android:layout_weight="1"/>
         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:src="@drawable/ic_baseline_person_pin_24"
             android:layout_gravity="center_vertical"
             android:layout_weight="1"/>
      </LinearLayout>
   </RelativeLayout>
</layout>